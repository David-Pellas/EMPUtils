{
  "manifest_version": 3,
  "name": "EMPUtils",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "declarativeNetRequest",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://dns.google/*",
    "https://raw.githubusercontent.com/*",
    "https://easylist.to/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "javascript/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["javascript/element-hider.js", "javascript/domain-intelligence.js", "javascript/content-alerts.js"],
      "css": ["css/alerts.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
      "js": ["javascript/youtube-ad-inject.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["javascript/analytics-blocker-inject.js", "javascript/resource-blocker-inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_analytics",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
